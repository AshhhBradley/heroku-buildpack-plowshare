# DOWNLOAD_URL="https://nodejs.org/dist/v12.14.1/node-v12.14.1-linux-x64.tar.xz"
# wget -P /tmp $DOWNLOAD_URL

echo "-----> Downloading Node.js"
wget -P /tmp "https://nodejs.org/dist/v12.14.1/node-v12.14.1-linux-x64.tar.xz"
echo "-----> Installing Node.js"
mkdir $BUILD_DIR/vendor/nodejs
tar xJf /tmp/node-v12.14.1-linux-x64.tar.xz -C $BUILD_DIR/vendor/nodejs
PROFILE_PATH="$BUILD_DIR/.profile.d/nodejs.sh"
mkdir -p "$(dirname "$PROFILE_PATH")"
echo 'export PATH="$PATH:${HOME}/vendor/nodejs/node-v12.14.1-linux-x64/bin"' >> $PROFILE_PATH
echo "-----> Done"

echo "-----> Downloading Plowshare"
# https://github.com/mcrapet/plowshare/releases
wget -O /tmp/plowshare-v2.1.7.tar.gz "https://github.com/mcrapet/plowshare/archive/v2.1.7.tar.gz"
echo "-----> Installing Plowshare"
mkdir $BUILD_DIR/vendor/plowshare
tar xJf /tmp/plowshare-v2.1.7.tar.gz -C $BUILD_DIR/vendor/plowshare
cd $BUILD_DIR/vendor/plowshare
ls -l
make install PREFIX=\$HOME
echo "-----> Done"

cat <<EOF >"$BUILD_DIR"/.profile.d/plowshare_config.sh
#!/bin/sh
plowmod --install
export PLOWSHARE_JS="node"
EOF

